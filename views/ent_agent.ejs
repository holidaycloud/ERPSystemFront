            data-widget-sortable="false"

            -->
            <header>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>

                <h2>分销商列表列表</h2>
            </header>

            <!-- widget div-->
            <!-- end widget edit box -->
            <div>
                <!-- widget content -->
                <div class="widget-body no-padding">
                    <table id="dtEntAgent" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>企业名称</th>
                            <th>联系人　</th>
                            <th>联系电话</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
    </div>
</div>
<script src="/js/page/ent_agent.js"></script>
<script type="text/javascript">
    var selectId = "";
    ///////////////////////////LOADING////////////////////////////////////////
    //get ents
    $.ajax({
        type: "GET",
        url: "/entMember/getEnts",
        cache:false
    }).done(function(data, textStatus){
        var h = "";
        for(var e in data.data){
            h +="<option value="+data.data[e]._id+">"+data.data[e].name+"</option>";
        }
        $("#selectAgents").html(h);

        $("#ldModal").modal("hide");
    }).fail(function(){
        $("#ldModal").modal("hide");
        alert("网络异常，请重试！");
    });
    //////////////////////////////INIT PLUGIN/////////////////////////////////
    //init select2
    $("#agentName").select2({
        placeholder: "分销商列表",
        minimumInputLength: 1,
        formatSelection: formatSelect2
    });

    //table object
    var table = $('#dtEntAgent').dataTable({
        "bPaginite": true,
        "sPaginationType": "bootstrap",
        "bFilter": false,
        "bSort": false,// 排序
        "bLengthChange": false,// 每行显示记录数
        "iDisplayLength": 9999,// 每页显示行数
        "bDestroy": true,
        "bServerSide": true,
        "sServerMethod": "POST",
        "sAjaxSource": "",
        "aoColumns": [
            {mData: "name"},
            {mData: "contactName"},
            {mData: "contactPhone"},
            {mData: "_id",
                mRender: function (data, type, full) {
                    return "<button id='btnEdit_" + data + "' onclick='unbind(\"" + data + "\");' class='btn btn-danger btn-xs' data-loading-text='处理中...请稍候'>删除</button>";
                }}
        ],
        "oLanguage": {
            "sProcessing": "正在加载数据...",
            "sZeroRecords": "没有符合条件的信息",
            "sLengthMenu": "每页显示_MENU_条 ",
            "sInfo": "当前数据从_START_ 到 _END_ 条记录——总记录数为 _TOTAL_ 条",
            "sInfoEmpty": "没有符合条件的信息",
            "sInfoFiltered": ""
        },
        fnServerData: refreshData
    });

    ////////////////////////////////////////INIT EVENT///////////////////////////////////////////////

    //add agent
    $("#btnAddAgent").unbind("click").click(function (e) {
        e.preventDefault();
        if ("" === selectId) {
            alert("请选择需要添加的分销商！");
            return false;
        }

        var params = {};
        params.ent = selectId;
        $("#btnAddAgent").button("loading");
        $.ajax({
            type: "POST",
            url: "/ent/agent/bind",
            cache: false,
            data: params
        }).done(function (data, textStatus) {
            if (data.error == 0) {
                showMessage("success", "添加分销商成功了！");
                table.fnDraw();
            } else {
                showMessage("danger", "添加分销商失败！" + data.errorMsg);
            }
            $("#btnAddAgent").button("reset");
        }).fail(function () {
            $("#btnAddAgent").button("reset");
            alert("网络异常，请重试！");
        });
    });
</script>