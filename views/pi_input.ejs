                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
    </div>
</div>
<script src="js/page/pi_input.js"/>
<script type="text/javascript">
///////////////////////////////LOADING//////////////////////////////////
    $("#ldModal").modal({
        backdrop:false,
        keyboard:false
    });
    ///init var
    var selectedPdt = "";
    var selectPdtType = "";
    ///init show and hide
    $("#buttonGrp").hide();
    $("#pii0").hide();
    $("#pii3").hide();
    //get products
    $.ajax({
        type: "GET",
        url: "/pi/getPdts",
        cache:false
    }).done(function(data, textStatus){
                var h = "";
                for(var e in data.data){
                    h += "<option value="+data.data[e]._id+" data-std="+data.data[e].startDate+" data-edd="+data.data[e].endDate+" data-type="+data.data[e].productType+">"+data.data[e].name+"</option>";
                }
                $("#selectPdts").html(h);

                $("#ldModal").modal("hide");
            }).fail(function(){
                $("#ldModal").modal("hide");
                alert("网络异常，请重试！");
            });

//////////////////INIT PLUGIN/////////////////////
    //init select2
    $("#piiPName").select2({
        placeholder: "请选择产品",
        allowClear: true,
        formatSelection: formatSelect2
    });

    //init date
    $("#piiStDate").datepicker({
        defaultDate: "+0d",
        changeMonth: false,
        changeYear: false,
        numberOfMonths: 1,
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>',
        onClose: function (selectedDate) {
            var arrays = selectedDate.split('-');
            var mDate = new Date(arrays[0],(arrays[1]-1),arrays[2]);
//            mDate.setDate(mDate.getDate()+1);
            $("#piiEndDate").datepicker("option", "minDate", mDate);
        }

    });
    $("#piiStDate").datepicker('setDate',"+0d");
    $("#piiEndDate").datepicker({
        defaultDate: "+0d",
        changeMonth: false,
        changeYear: false,
        numberOfMonths:1,
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>'
    });
    $("#piiEndDate").datepicker('setDate',"+0d");
//////////////////////////////////INIT EVENT//////////////////////////////////////
    //save input data click event
    $("#btnPiiSave").unbind("click").click(function(e){
        e.preventDefault();
        if(!selectedPdt||selectedPdt.trim()===""){
            alert("请选择需要录入价格库存的产品！");
            return false;
        }
        var params = {};
        params.product = selectedPdt;
        params.pType = selectPdtType;
        if(0==selectPdtType){
            if($("#piiStDate").val()===""){
                alert("请选择开始时间！");
                return false;
            }
            if($("#piiEndDate").val()===""){
                alert("请选择结束时间！");
                return false;
            }
            if($("#piiBasePrice").val().trim()===""||isNaN($("#piiBasePrice").val())){
                alert("请输入有效的平日成本价！");
                return false;
            }
            if($("#piiTradePrice").val().trim()===""||isNaN($("#piiTradePrice").val())){
                alert("请输入有效的平日结算价！");
                return false;
            }
            if($("#piiPrice").val().trim()===""||isNaN($("#piiPrice").val())){
                alert("请输入有效的平日卖价！");
                return false;
            }
            if($("#piiWkBasePrice").val().trim()===""||isNaN($("#piiWkBasePrice").val())){
                alert("请输入有效的周末成本价！");
                return false;
            }
            if($("#piiWkTradePrice").val().trim()===""||isNaN($("#piiWkTradePrice").val())){
                alert("请输入有效的周末结算价！");
                return false;
            }
            if($("#piiWkPrice").val().trim()===""||isNaN($("#piiWkPrice").val())){
                alert("请输入有效的周末卖价！");
                return false;
            }
            if($("#piiInventory").val().trim()===""||isNaN($("#piiInventory").val())){
                alert("请输入有效的平日库存！");
                return false;
            }
            if($("#piiWkInventory").val().trim()===""||isNaN($("#piiWkInventory").val())){
                alert("请输入有效的周末库存！");
                return false;
            }
            params.startDate = $("#piiStDate").val();
            params.endDate = $("#piiEndDate").val();
            params.basePrice = $("#piiBasePrice").val();
            params.tradePrice = $("#piiTradePrice").val();
            params.price = $("#piiPrice").val();
            params.weekendBasePrice = $("#piiWkBasePrice").val();
            params.weekendTradePrice = $("#piiWkTradePrice").val();
            params.weekendPrice = $("#piiWkPrice").val();
            params.inventory = $("#piiInventory").val();
            params.weekendinventory = $("#piiWkInventory").val();
        }
        $("#ldModal").modal({
            backdrop:false,
            keyboard:false
        });
        $.ajax({
            type: "POST",
            url: "/pi/add",
            cache:false,
            data:params
        }).done(function(data, textStatus){
                    if(data.error!=0){
                        showMessage("error","数据保存失败！"+data.errorMsg);
                    }else{
                        showMessage("success","数据保存成功！");
                    }
                    $("#ldModal").modal("hide");
                }).fail(function(){
                    $("#ldModal").modal("hide");
                    alert("网络异常，请重试！");
                });
    });

    //form reset click event
    $("#btnPiiReset").unbind("click").click(function(){
        selectedPdt = "";
        $("#piiPName").select2("val","");
    });
</script>