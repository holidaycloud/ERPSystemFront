                                                <label class="input">
                                                    <input type="text" name="piiInventory" id="piiInventory" placeholder="必填">
                                                </label>
                                            </div>
                                        </div>
                                    </section>

                                        <section>
                                            <div class="row">
                                                <label class="label col col-2">周末库存</label>
                                                <div class="col col-10">
                                                    <label class="input">
                                                        <input type="text" name="piiWkInventory" id="piiWkInventory" placeholder="必填">
