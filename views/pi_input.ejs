                                            <label class="label col col-2">周末结算价</label>
                                            <div class="col col-10">
                                                <label class="input">
                                                    <input type="text" name="piiWkTradePrice" id="piiWkTradePrice" placeholder="必填">
                                                </label>
                                            </div>
                                        </div>
                                    </section>

                                    <section>
                                        <div class="row">
                                            <label class="label col col-2">周末卖价</label>
                                            <div class="col col-10">
