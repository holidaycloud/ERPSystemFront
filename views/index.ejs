<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
    $("#showName").html("欢迎您," + getCookie('n'));

    //login
    $("#loginForm").validate({
        // Rules for form validation
        rules: {
            lName: {
                required: true
            },
            password: {
                required: true,
                minlength: 6,
                maxlength: 20
            }
        },

        // Messages for form validation
        messages: {
            lName: {
                required: '请输入您登录的手机号'
            },
            password: {
                required: '请输入您登录的密码'
            }
        },

        // Do not change code below
        errorPlacement: function (error, element) {
            error.insertAfter(element.parent());
        }
    });

    function checkToken(e) {
        e.preventDefault();
        $("#mLoginModal").modal();
        return false;
    }

    //login
    $("#btnMLogin").unbind("click").click(function (e) {
        e.preventDefault();
//            if(6>$("#password").val().trim().length){
//                alert("新密码长度必须大于6位！");
//                return false;
//            }

        var datas = {};
        datas.password = faultylabs.MD5($('#password').val().trim()).toLowerCase();
//            datas.remember = $("#remember")[0].checked;
        datas.username = $("#lName").val();

        $.ajax({
            type: "post",
            url: "/login",
            cache: false,
            data: datas
        }).done(function (data, textStatus) {
            if (data.error != 0) {
                $('#fm_error').removeClass('hidden');
                $('#fm_errorMsg').text(data.errorMsg);
            } else {
                showMessage("success", "登录成功！");
                $("#mLoginModal").modal('hide');
            }
        }).fail(function () {
            alert("网络异常，请重试！");
        });
    });

    //notice init
    var ws_opt = {};
    ws_opt.reconnection = true;
    ws_opt.autoConnect = true;
    //create socket
    var socket = null;
    try{
        socket = io('http://localhost:3000', ws_opt);
        socket.on('connect', function () {
            try {
                console.log('connect...');
                socket.emit('login', {"token": getCookie('t')});
            } catch (e) {
                console.log('connect error:', e);
            }
        });
        socket.on('disconnect', function () {
            console.log('disconnect');
        });
        socket.on('error', function (error) {
            console.log("error:", error);
        });
        socket.on('notice', function (data) {
            console.log('notice:', data);
        });
    }catch(e){
        console.log('socket error:',e);
    }

    window.onbeforeunload = function() {
        console.log('disconnect');
        socket.disconnect();
    }
</script>
</html>