<script type="text/javascript">
    $("#cardNo").focus();

    /////////////////////////////INIT EVENT//////////////////////////////
    //create click event
    $("#cActiveForm").submit(function(e){
        e.preventDefault();
        if(""===$("#cardNo").val().trim()){
            alert("卡号不能为空");
            return false;
        }
        var params = {};
        params.cardNo = $("#cardNo").val().trim();

        $("#ldModal").modal({
            backdrop:false,
            keyboard:false
        });
        $.ajax({
            type: "POST",
            url: "/card/active",
            cache:false,
            data:params
        }).done(function(data, textStatus){
                    if(data.error==0){
                        showMessage("success","卡号："+$("#cardNo").val().trim()+"激活成功了！");
                    }else{
                        showMessage("danger","卡号："+$("#cardNo").val().trim()+"激活失败！"+data.errorMsg);
                    }
                    $("#ldModal").modal("hide");
                }).fail(function(){
                    $("#ldModal").modal("hide");
                    alert("网络异常，请重试！");
                });
    });
</script>