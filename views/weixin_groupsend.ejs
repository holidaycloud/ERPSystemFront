<script type="text/javascript">
///////////////////////////////LOADING////////////////////////////////////
    initPicMsgPdts();
    ///init var
    var type = "1";
    //picMsg var
    var selectPdts = [];
    var count = 0;
    ///////////////////////////INIT PLUGIN////////////////////////////////////

    ////////////////////////////INIT EVENT////////////////////////////////////
    $("#gsTab a").click(function(e){
        e.preventDefault();
        type = $(this).attr("data");
        switch(type){
            case "0":
                console.log(type,$("#gsContent").val());
                break;
            case "1":
                initPicMsgPdts();
                break;
            case "2":
                for(var i=0;i<20;i++){
                    generateReview("uploads/4f66afd8d41ad717b6330a0d0fb523e3.jpg");
                }
                break;
        }
    });

    //send click event
    $("#btnSend").click(function(){
        switch(type){
            case "0":
                console.log(type,$("#gsContent").val());
                break;
            case "1":
                console.log(type,$("[name=gsPicMsg]:checked").val());
                break;
            case "2":
                console.log(type,$("[name=gsPic]:checked").val());
                break;
        }
        var params = {};
        params.type = type;
        if("1"===type){
            params.pdts = selectPdts;
        }
        $.ajax({
            type: "POST",
            url: "/wx/sendGrpMsg",
            cache:false,
            data:params
        }).done(function(data, textStatus){
            if(data.error==0){
                showMessage("success","群发消息成功！");
                alert("群发消息成功！");
            }else{
                showMessage("danger","群发消息失败！"+data.errorMsg);
                alert("群发消息失败！"+data.errorMsg);
            }
        }).fail(function(){
            alert("网络异常，请重试！");
        });
    });
</script>