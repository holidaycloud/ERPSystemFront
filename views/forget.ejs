<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <title>Forget</title>
<%include header%>
</head>
<body id="login" class="animated fadeInDown">
<!-- possible classes: minified, fixed-ribbon, fixed-header, fixed-width-->
        <!--HEADER-------------------------------------------------------------------------->
    <header id="header">
        <!--logo--------------------------------------->
        <div id="logo-group">
            <span id="logo"> <img src="img/logo.png" alt="HolidayCloud"> </span>
        </div>
        <!--end logo----------------------------------->

    </header>
        <!--END HEADER---------------------------------------------------------------------->
    <!--MAIN------------------------------------------------------------------------>
    <div id="main" role="main">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 hidden-mobile">

                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="well no-padding">
                        <form id="login-form" class="smart-form client-form">
                            <header>
                                忘记密码
                            </header>
                            <fieldset>
                                <section>
                                    <div class="hidden" id="f_error">
                                        <label style="color: #ff0000" id="f_errorMsg"></label>
                                    </div>
                                </section>
                                <section>
                                    <label class="label">用户名</label>
                                    <label class="input"> <i class="icon-prepend fa fa-user"></i>
                                        <input type="text" name="username" id="username">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> 请输入用户名/邮箱/手机号</b></label>
                                </section>

                                <section>
                                    <label class="label">密　码</label>
                                    <label class="input"> <i class="icon-prepend fa fa-lock"></i>
                                        <input type="password" name="password" id="password">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> 请输入登录密码</b> </label>
                                </section>
                                <div class="note">
                                    <a href="/">去登录页</a>
                                </div>
                            </fieldset>
                            <footer>
                                <button type="submit" class="btn btn-primary" id="btnLogin">
                                   登录
                                </button>
                            </footer>
                        </form>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--END MAIN----------------------------------------------------------->
</body>
<%include footer%>

<script type="text/javascript">
    $(function() {

    });
</script>
</html>