        <span class="widget-icon"> <i class="fa check-square-o"></i> </span>
        <h2>积分换算率</h2>
    </header>

    <!-- widget div-->
    <div>
    <!-- end widget edit box -->

    <!-- widget content -->
        <div class="modal-body no-padding">
            <form id="cusSRForm" class="smart-form">
                <fieldset>
                    <section>
                        <div class="row">
                            <label class="label col col-1">1积分 = </label>
                            <div class="col col-2">
                                <label class="input">
                                    <input type="text" name="money" id="money" placeholder="请输入所需消费金额">
                                </label>
                            </div>
                            <label class="label col col-1">元（消费金额）</label>
                        </div>
                    </section>
                </fieldset>
                <footer>
                    <button type="button" class="btn btn-primary" id="btnSave">
                        保存
                    </button>
                </footer>
            </form>
        </div>
    <!-- end widget content -->

    </div>
    <!-- end widget div -->

    </div>
    </div>
</div>

<script type="text/javascript">
////////////////////////////LOADING/////////////////////////////////
$("#ldModal").modal({
    backdrop:false,
    keyboard:false
});
$.ajax({
    type: "GET",
    url: "/customer/score/detail",
    cache:false
}).done(function(data, textStatus){
    if(data.error==0){
        $("#money").val(data.money);
    }else{
        $("#money").val("");
    }
    $("#ldModal").modal("hide");
}).fail(function(){
    $("#ldModal").modal("hide");
    $("#money").val("");
    alert("网络异常，请重试！");
});

    /////////////////////////////INIT EVENT//////////////////////////////
    //create click event
    $("#btnSave").unbind("click").click(function(e){
        e.preventDefault();
        if(""===$("#money").val().trim()||isNaN($("#money").val().trim())){
            alert("请输入正确的消费金额");
            return false;
        }
        var params = {};
        params.money = $("#money").val().trim();

        $("#ldModal").modal({
            backdrop:false,
            keyboard:false
        });
        $.ajax({
            type: "POST",
            url: "/customer/score/save",
            cache:false,
            data:params
        }).done(function(data, textStatus){
                    if(data.error==0){
                        $("#money").val("");
                        showMessage("success","积分配置成功了！");
                    }else{
                        showMessage("danger","积分配置失败！"+data.errorMsg);
                    }
                    $("#ldModal").modal("hide");
                }).fail(function(){
                    $("#ldModal").modal("hide");
                    $("#money").val("");
                    alert("网络异常，请重试！");
                });
    });
</script>