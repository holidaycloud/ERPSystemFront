<script src="/js/page/order_list.js"></script>
<script type="text/javascript">
    //load page
    var selectedPdt = "";
    $("#ldModal").modal({
        backdrop:false,
        keyboard:false
    });
    $.ajax({
        type: "GET",
        url: "/order/getMyPdts",
        cache:false
    }).done(function(data, textStatus){
                var h = "";
                for(var e in data.data){
                    h +="<option value="+data.data[e]._id+" data-std="+data.data[e].startDate+" data-edd="+data.data[e].endDate+">"+data.data[e].name+"</option>";
                }
                $("#selectPdts").html(h);

                $("#ldModal").modal("hide");
            }).fail(function(){
                $("#ldModal").modal("hide");
                alert("网络异常，请重试！");
            });

    ////////////////////////////////////INIT PULGIN////////////////////////////////////
    $("#olPName").select2({
        placeholder: "请选择产品",
        allowClear: true,
        formatSelection: formatSelect2
    });

    //date init
    $("#olStDate").datepicker({
        defaultDate: "+0d",
        changeMonth: false,
        changeYear: false,
        numberOfMonths: 1,
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>',
        onClose: function (selectedDate) {
            var arrays = selectedDate.split('-');
            var mDate = new Date(arrays[0],(arrays[1]-1),arrays[2]);
//            mDate.setDate(mDate.getDate()+1);
            $("#olEndDate").datepicker("option", "minDate", mDate);
        }

    });
    $("#olStDate").datepicker('setDate',"+0d");
    $("#olEndDate").datepicker({
        defaultDate: "+0d",
        changeMonth: false,
        changeYear: false,
        numberOfMonths:1,
        prevText: '<i class="fa fa-chevron-left"></i>',
        nextText: '<i class="fa fa-chevron-right"></i>'
    });
    $("#olEndDate").datepicker('setDate',"+0d");

//table object
var table = $('#dtOrder').dataTable({
    "bPaginite":true,
    "sPaginationType" : "bootstrap",
    "bFilter":false,
    "bSort" : false,// 排序
    "bLengthChange" : false,// 每行显示记录数
    "iDisplayLength" : 25,// 每页显示行数
    "bDestroy" : true,
    "bServerSide" : true,
    "sServerMethod": "POST",
    "sAjaxSource": "",
    "aoColumns":[
        {mData:"orderID",
            mRender:function(data,type,full){
                return "<a style='cursor:pointer' onclick='btnDetail(\""+full._id+"\");'>"+data+"</a>";
            }},
        {mData:"member.loginName"},
        {mData:"product.name"},
        {mData:"startDate"},
        {mData:"quantity"},
        {mData:"totalPrice"},
        {mData:"status"},
        {mData:"payWay"},
        {mData:"orderDate"},
        {mData:"_id",
            mRender:function(data,type,full){
                if(full.status==="已支付"){
                    return "<button id='btnConfrim_"+data+"' onclick='btnConfrim(\""+data+"\");' class='btn btn-primary btn-xs' data-loading-text='修改中...请稍候'>确认订单</button>";
                }else{
                    return "";
                }

            }}
    ],
    "oLanguage": {
        "sProcessing" : "正在加载数据...",
        "sZeroRecords" : "没有符合条件的信息",
        "sLengthMenu" : "每页显示_MENU_条 ",
        "sInfo" : "当前数据从_START_ 到 _END_ 条记录——总记录数为 _TOTAL_ 条",
        "sInfoEmpty" : "没有符合条件的信息",
        "sInfoFiltered" : ""
    },
    fnServerData:refreshData
});

///////////////////////////////////////INIT EVENT////////////////////////////////////////
//list search
$("#btnSearch").unbind("click").click(function(){
    table.fnDraw();
});
</script>