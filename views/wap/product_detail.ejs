<!DOCTYPE html>
<html lang="en-us">
<head>
    <meta charset="utf-8">
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">-->

    <title> 产品详情 </title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <% include header %>
</head>
<body class="">
<!-- POSSIBLE CLASSES: minified, fixed-ribbon, fixed-header, fixed-width
     You can also add different skin classes such as "smart-skin-1", "smart-skin-2" etc...-->

<!-- MAIN PANEL -->
<div id="main" role="main">
    <!-- MAIN CONTENT -->
    <div id="content">
        <div class="detailTop">
            <%if(data.images&&data.images.length>0){%>
            <div class="container">
                <div class="detailinfo">
                    <div id="myCarousel-2" class="carousel slide">
                        <ol class="carousel-indicators">
                            <%for(var i in data.images){%>
                                <li data-target="#myCarousel-2" data-slide-to="<%=i%>" <%if(i==0){%>class="active"<%}%>></li>
                            <%}%>
                        </ol>
                        <div class="carousel-inner">
                            <%for(var i in data.images){%>
                                <div class="item <%if(i==0){%>active<%}%>">
                                    <img src="<%=data.images[i].url%>" style="height:200px" alt="">
                                    <div class="carousel-caption">
                                        <h4></h4>
                                        <br>
                                    </div>
                                </div>
                            <%}%>
                        </div>
                        <a class="left carousel-control" href="#myCarousel-2" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span> </a>
                        <a class="right carousel-control" href="#myCarousel-2" data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span> </a>
                    </div>
                </div>
            </div>
            <%}%>
            <div class="container">
                <div class="title">
                    <h1><%= data.name %></h1>
                    <!--<h4></h4>-->
                </div>
                <% if(data.priceId !== ""){ %>
                <div class="price">￥<%= data.sprice %></div>
                <div class="buybox"><a class="orangelink"
                                       href="/wap/goFillOrder/<%= data._id %>/<%= data.priceId %>">购买</a></div>
                <% }else{ %>
                <div class="price">&nbsp;</div>
                <div class="buybox">
                    <div class="graylink">订完</div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="container">
            <div class="detailinfo">
                <p><%= data.introduction %></p>
            </div>

            <div class="detailinfo">
                <p>产品详情</p>
                <div id="pdContent">

                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
</div>
</body>
<% include footer %>
<script type="text/javascript">
    var html = "<%=data.content%>";
    $("#pdContent").html(myHTMLDeCode(html));
    $('.carousel.slide').carousel({
        interval: 3000,
        cycle: true
    });
</script>

</html>